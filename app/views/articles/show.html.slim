#notice= notice
p
  strong Name:
  = @article.name

= link_to 'Edit', edit_article_path(@article)
= ' | '
= link_to 'Back', articles_path
= ' | '
= link_to 'Add post', new_article_post_path(@article)

h1 Listing Posts
table
  thead
    tr
      th Author
      th Body
      th colspan="3"
  tbody
    - @article.posts.each do |post|
      tr
        td= post.author
        td= post.body
        td= link_to (t :show), article_post_path(@article, post)
        td= link_to (t :edit), edit_article_post_path(@article, post)
        td= link_to (t :destroy), article_post_path(@article, post), method: :delete, data: { confirm: (t :are_you_sure) }
