<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', article_post_path(@article, post) %></td>
        <td><%= link_to 'Edit', edit_article_post_path(@article, post) %></td>
        <td><%= link_to 'Destroy', article_post_path(@article, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
